using System;

namespace MadLibs
{
    class Program
    {
        static void Main()

            /*The purpose of this program is to put together a simple, console based, Madlibs game using C# and a public domain excerpt from "The Hound of the Baskervilles" by A.Conan Doyle. 
             * The excerpt is as follows:
             * "They all agreed that it was a huge creature, luminous, ghastly, and spectral.
             * I have cross-examined these men, one of them a hard-headed countryman, one a farrier, and one a moorland farmer,
             * who all tell the same story of this dreadful apparition, exactly corresponding to the hell-hound of the legend."
             * */
        {
            //declare variables
            string Creature;
            string Luminous;
            string Ghastly;
            string Spectral;
            string Countryman;
            string Farrier;
            string Farmer;
            string Dreadful;
            string Apparition;
            string Hound;
            string Story;

            //write out a header
            Console.WriteLine("Welcome to the Hound of the Baskervilles Madlib!");
            Console.WriteLine("  ");
            Console.WriteLine("This program will generate a passage using an except of Arthur Conan Doyle's 'The Hound of the Baskervilles'");
            Console.WriteLine("  ");

            //ask player to enter words
            Console.WriteLine("Please enter a noun: ");
            Creature = Console.ReadLine();

            Console.WriteLine("Great! Now enter an adjective: ");
            Luminous = Console.ReadLine();

            Console.WriteLine("Great! Now enter another adjective: ");
            Ghastly = Console.ReadLine();

            Console.WriteLine("Grand! Now enter another adjective: ");
            Spectral = Console.ReadLine();

            Console.WriteLine("Wonderful! Now enter an occupation: ");
            Countryman = Console.ReadLine();

            Console.WriteLine("Grand! Now enter another occupation: ");
            Farrier = Console.ReadLine();

            Console.WriteLine("Perfect! Now enter another occupation: ");
            Farmer = Console.ReadLine();

            Console.WriteLine("Great! Now enter an adjective: ");
            Dreadful = Console.ReadLine();

            Console.WriteLine("Thanks! Now enter a noun: ");
            Apparition = Console.ReadLine();

            Console.WriteLine("We're nearly there! Just one last noun: ");
            Hound = Console.ReadLine();

            //write out finished story
            Story = "They all agreed hat it was a huge " + Creature + ", " + Luminous + ", " + Ghastly + ", and " + Spectral + ". I have cross-examined these men, one of them a hard-headed " + Countryman + ", one a " + Farrier + ", and one a moorland " + Farmer + ", who all tell the same story of this " + Dreadful + " " + Apparition + ", exactly corresponding to the " + Hound + " of the legend.";
            Console.WriteLine("  ");
            Console.WriteLine(Story);
            Console.WriteLine("  ");

            //keep window open and prompt for exit
            Console.WriteLine("Thanks for playing! Please press 'Enter' to Exit");
            Console.ReadKey();
        }
    }
}
