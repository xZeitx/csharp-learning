using System;

namespace ConsoleCreatures
{
    class Program
    {
        static void Main(string[] args)
        {
            //This program is making a wee ghost.
            Console.WriteLine(" .-.");
            Console.WriteLine("(o o)");
            Console.WriteLine("| 0 |");
            Console.WriteLine("|   |");
            Console.WriteLine("'~~~'");
            Console.WriteLine("Meet my wee ghost!");
        }
    }
}
